@model EmployeeMockupWebDemo.Data.DAL.Model.Employee
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row p-0 no-gutters">
    <div class="col-12 text-left">
        <h1>Edit Employee</h1>
    </div>
</div>
<br />
<br />

<form method="POST" asp-controller="Employees" asp-action="Edit">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger" style="font-family: Helvetica;"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-10 offset-1 mt-4" style="font-family: Helvetica; font-size:1.2vw">
            <div class="form-group row">
                <div class="col-4 text-right">
                    <label asp-for="FirstName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="FirstName" class="form-control" style="font-family: Helvetica; font-size:1.1vw" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4 text-right">
                    <label asp-for="Lastname"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Lastname" class="form-control" style="font-family: Helvetica; font-size:1.1vw" />
                    <span asp-validation-for="Lastname" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4 text-right">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Email" class="form-control" style="font-family: Helvetica; font-size:1.1vw" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row text-center">
                        <div class="col">
                            <button type="submit" class="btn btn-dark form-control rounded mr-5"> <i class="fas fa-check-square"></i> Edit </button>
                        </div>
                        <div class="col">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-dark form-control rounded ml-5"> <i class="fas fa-backspace"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

